@model Item
<partial name="_Notification" />

<h2>Update Item Info</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <form method="post">
                <div asp-validation-summary="All"></div>

                <input asp-for="Id" hidden />
                <label asp-for="Name" class="py-2"></label>
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label asp-for="Number" class="py-2"></label>
                <input asp-for="Number" placeholder="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
                <br />
                <input asp-for="date" hidden />

                <input asp-for="UserId" hidden />


                <label asp-for="Expense" class="py-2"></label>
                <input asp-for="Expense" placeholder="Expense of 1 item" class="form-control" />
                <span asp-validation-for="Expense" class="text-danger"></span>

                <br />
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>