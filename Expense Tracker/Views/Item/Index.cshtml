@model List<Item>

<partial name="_Notification" />


<div class="container">
    <div class="row">
        <div class="col-7 p-2">
            <h2>List of Category</h2>
        </div>
        <div class="col-5 p-2 ">
            <a class="nav-link text-white bg-dark fw-bold text-center" asp-controller="Item" asp-action="CreateItem">Create Item</a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Number of item
            </th>
            <th>
                Item price
            </th>
             <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Number</td>
                    <td>@i.Expense</td>
                    <td>@i.date</td>

                    <td>
                        <a asp-controller="Item" asp-action="ItemUpdate" asp-route-id="@i.Id" class="btn btn-dark">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Item" asp-action="DeleteItem" asp-route-id="@i.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
        }
        
        <tr>
            <td><h4>Total Expanses</h4></td>
            <td></td>
            <td>@TempData["totalPrices"]</td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
