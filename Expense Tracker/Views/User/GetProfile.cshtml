@model User

<partial name="_Notification" />


@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-7 p-2">
                <h2>User Profile</h2>
            </div>
            @*<div class="col-5 p-2 ">
                <a class="nav-link text-white bg-dark fw-bold text-center" asp-controller="User" asp-action="CreateUser">Create User</a>
            </div>*@
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Key
                </th>
                <th>
                    Value
                </th>
               
               
            </tr>
        </thead>
        <tbody>

            
                <tr>
                <th>
                    User Name
                </th>
                    <td>@Model.Name</td>

                
                </tr>
                <tr>
                <th>
                    Join Date
                </th>
                <td>@Model.JoinDate</td>
                
                </tr>
                <tr>
                <th>
                    Age
                </th>
                <td>@Model.Age</td>




               
                </tr>
                <tr>
                <td>
                    <a asp-controller="User" asp-action="UserUpdate" asp-route-id="@Model.Id" class="btn btn-dark">Update</a>
                </td>
                <td>
                    <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                </td>
               
                </tr>
                <tr>
               
                </tr>

            



        </tbody>
    </table>
}
else
{
    <h2>You are not eligible</h2>
}
